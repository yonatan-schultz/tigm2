

<table>
  <thead>
    <tr>
      <th>Shattered empire</th>
      <th>Shards of the throne</th>
      <th>Number of players</th>
      <th>Races</th>
      <th>Rules</th>
      <th>Strategy cards</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.hosted_games.each do |game| %>
      <tr>
        <td><%= game.shattered_empire %></td>
        <td><%= game.shards_of_the_throne %></td>
        <td><%= game.number_of_players %></td>
        <td><%= game.races %></td>
        <td><%= game.rules %></td>
        <td><%= game.strategy_cards %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Cancel Game', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% if game.number_of_players - 1 > game.played_games.length %>
          <td><%= link_to 'Invite User', new_played_game_path(:game_id => game.id) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>