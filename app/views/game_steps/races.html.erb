<h1>Select Your Races</h1>
<%= form_for @game, :url => wizard_path do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
  <% @game.select_races.each do |a| %>
  <a href="#" target="_blank" data-image-url="<%= image_path(a.split(' ').join+'.jpg') %>" class="preview" rel="popover"><%= f.label a %></a>
 		<%= check_box_tag 'game[races][]', a , true %>
  <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<script>
$('.preview').popover({
    'trigger':'hover',
    'html':true,
    'content':function(){
        return "<img src='"+$(this).data('imageUrl')+"'>";
    }
});
</script>